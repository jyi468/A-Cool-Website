@model MyWebsiteEntity.Models.CommentModel

<div class="model-container dp-none dp-block">
    <button class="Button borderless close visible close-model" style="right: 31px;">
        <em class="fa fa-times fa-2x"></em>
    </button>
    <div class="modelpopup">
        <div class="model-box">
            <img src="@Url.Content(Model.imgurl)" />
        </div>
        <div class="model-box">
            <div class="pinDescription">
                <div class="pinDescriptionComment detailed">
                    <a class="userThumbContainer" href="#">
                        <img class="userThumb" alt="" src="/images/profile-30.jpg" />
                    </a>
                    <div class="commenterNameCommentText">
                        <div class="commenterWrapper">
                            <a class="commentDescriptionCreator" href="#">
                                @Html.DisplayFor(model => model.OP)
                            </a>
                            <span class="commentDescriptionTimeAgo">
                                • 4 days ago
                            </span>
                        </div>
                        <h1 class="commentDescriptionContent">
                            @Html.DisplayFor(model => model.Description)
                        </h1>
                    </div>
                </div>
            </div>
            <div class="PinCommentList">
                <div class="commentsContainer">
                    <ul>
                        @if (Model.Comments != null)
                        {
                            for (var i = 0; i < Model.Comments.Count(); i++)
                            {
                                <li>
                                    <div class="pinDescriptionComment detailed">
                                        <a class="userThumbContainer" href="#">
                                            <img class="userThumb" alt="" src="/images/profile-30.jpg" />
                                        </a>
                                        <div class="commenterNameCommentText">
                                            <div class="commenterWrapper">
                                                <a class="commentDescriptionCreator" href="#">
                                                     @Html.DisplayFor(model => Model.UserNames[i])
                                                </a>
                                                <span class="commentDescriptionTimeAgo">
                                                    • 4 days ago
                                                </span>
                                            </div>
                                            <h1 class="commentDescriptionContent">
                                                    @Html.DisplayFor(model => Model.Comments[i])
                                            </h1>
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="pinDescriptionComment detailed">
                <a class="userThumbContainer" href="#">
                    <img class="userThumb" alt="" src="/images/profile-30.jpg" />
                </a>
                <div class="commenterNameCommentText">
                    <div class="commenterWrapper">
                        <a class="commentDescriptionCreator" href="#">
                            @User.Identity.Name
                        </a>
                        <span class="commentDescriptionTimeAgo">
                            • This is you
                        </span>
                    </div>
                    <form id="commentForm">
                        <h1 class="commentDescriptionContent">
                            <textarea form="commentForm" class="content" placeholder="Comment this post" name="comment"></textarea>
                        </h1>
                        <p>
                            <button class="Button btn primary" type="submit" name="@Url.Action("Comment", "Account", new { id = Model.EntityId, url = Model.imgurl })">
                                <span class="buttonText">
                                    Submit
                                </span>
                            </button>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
